<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<p>
  Author: <%= @article.user.username %>
</p>
<% if can? :update, @article %>
<%= link_to 'Edit', edit_article_path(@article) %> |
<% end %>
<%= link_to 'Back', articles_path %>

<p><i>Comments:</i></p>

<% @article.comments.each do |comment| %>
  <p>
  <strong><%= comment.user.username %></strong> said:

    <i><%= comment.content %> / </i>
    <%#= link_to 'Update', [comment.article, comment], method: :put %>
    <%= link_to 'Destroy', [comment.article, comment], method: :delete, data: { confirm: 'Are you sure?' } %>
  </p>
<% end %>

<h4>Add comment</h4>
<p>
  <%= form_for([@article, @article.comments.build]) do |f| %><!-- @article.comments - "коллецкия", .build создаст новый объект, который не будет сохранён
  <p>
    Comment: <br>
    <%= f.text_area :content, rows: '5' %>
  </p>
  <p>
    <%= f.submit 'Leave Comment', class: 'bnt btn-success' %>
  </p>
<% end %>
</p>

